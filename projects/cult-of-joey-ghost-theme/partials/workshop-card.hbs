<article class="workshop-card card" data-category="{{#if primary_tag}}{{primary_tag.name}}{{/if}}">
    {{#if feature_image}}
    <div style="position: relative; aspect-ratio: 16/9; overflow: hidden; border-radius: var(--radius-md); margin-bottom: 1.25rem;">
        <div style="position: absolute; inset: 0; background: linear-gradient(to top, var(--c-surface), transparent, transparent); opacity: 0.8; z-index: 10;"></div>
        <img src="{{img_url feature_image size="m"}}" alt="{{title}}" style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.7s;">
        {{#if primary_tag}}
        <div style="position: absolute; bottom: 0.75rem; left: 1rem; z-index: 20;">
            <span class="chip">{{primary_tag.name}}</span>
        </div>
        {{/if}}
    </div>
    {{/if}}
    
    <div>
        <h3 class="glitch-hover" style="font-family: var(--font-heading); font-size: 1.25rem; font-weight: 700; color: var(--c-text); margin-bottom: 0.5rem; transition: color var(--duration-hover);">{{title}}</h3>
        
        <p style="font-size: 0.875rem; color: var(--c-text-muted); margin-bottom: 1rem; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">{{excerpt words="20"}}</p>
        
        {{#if tags}}
        <div style="display: flex; flex-wrap: wrap; gap: 0.5rem;">
            {{#foreach tags limit="3"}}
                <span class="chip" style="background-color: var(--c-surface); color: var(--c-accent-soft); border-color: rgba(0, 255, 255, 0.2); font-family: var(--font-mono);">{{name}}</span>
            {{/foreach}}
        </div>
        {{/if}}
    </div>
</article>

<style>
.workshop-card:hover img {
    transform: scale(1.1);
}
.workshop-card:hover h3 {
    color: var(--c-accent);
}
</style>

