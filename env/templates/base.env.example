# --- Shared Defaults --------------------------------------------------------
TZ=America/Chicago
TIMEZONE=${TZ}

# Cloudflare DNS Management
# Note: Using Cloudflare DNS management only (not Cloudflared tunnels)
# IMPORTANT: Environment variable names must use underscores, not hyphens
# Valid: CF_ZONE_ID_CULT_OF_JOEY
# Invalid: CF_ZONE_ID_CULT-OF-JOEY (hyphens not allowed)
CF_ACCOUNT_ID=
CF_DNS_API_TOKEN=
CF_API_TOKEN=
CF_USER_EMAIL=
CF_ACCESS_KEY_ID=
CF_SECRET_ACCESS_KEY=
CF_R2_BASE_URL=
CF_ZONE_FREQKFLAG_CO=
CF_ZONE_TWIST3DKINK_ONLINE=
CF_ZONE_ID_TWIST3DKINKONLINE=
CF_ZONE_CULT_OF_JOEY_COM=
CF_ZONE_ID_CULT_OF_JOEY=

# Traefik / Ingress
TRAEFIK_LOG_LEVEL=INFO
TRAEFIK_ACME_EMAIL=ops@freqkflag.co
TRAEFIK_DASHBOARD_HOST=traefik.freqkflag.co
TRAEFIK_DASHBOARD_USERS=admin:$$apr1$$example$$hash

# Infisical
INFISICAL_PROJECT_ID=8c430744-1a5b-4426-af87-e96d6b9c91e3
# IMPORTANT: Replace 'CHANGE_ME_STRONG_PASSWORD' with actual Infisical database password
INFISICAL_DB_CONNECTION=postgresql://infisical:CHANGE_ME_STRONG_PASSWORD@postgres:5432/infisical
# IMPORTANT: Replace 'CHANGE_ME_STRONG_PASSWORD' with actual Redis password if Redis auth is enabled
INFISICAL_REDIS_URL=redis://redis:6379
INFISICAL_PUBLIC_URL=https://infisical.freqkflag.co
INFISICAL_HOST=infisical.freqkflag.co
INFISICAL_HOST_URL=https://infisical.freqkflag.co

# Infisical MCP Server (Model Context Protocol)
# Machine Identity Universal Auth credentials for MCP server
# Create Machine Identity in Infisical → Settings → Machine Identities
# Generate Universal Auth credentials and set them in /prod path
INFISICAL_UNIVERSAL_AUTH_CLIENT_ID=
INFISICAL_UNIVERSAL_AUTH_CLIENT_SECRET=

# GitHub MCP Server (Model Context Protocol)
# GitHub Personal Access Token for GitHub API access
# Create token at: https://github.com/settings/tokens
# Required scopes: repo, public_repo, read:org, write:org
# Store token in Infisical /prod path as GITHUB_TOKEN
GITHUB_TOKEN=
GH_TOKEN=

# Kong / API
KONG_DATABASE=postgres
KONG_ADMIN_HOST=api-admin.freqkflag.co
KONG_PROXY_HOST=api.freqkflag.co
KONG_ADMIN_KEY=

# Core Databases
# IMPORTANT: All passwords must be strong (32+ characters, mixed case, numbers, special chars)
# Generate passwords using: openssl rand -base64 32
# Store actual passwords in Infisical /prod environment, never in templates
POSTGRES_DB=infra
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

MARIADB_HOST=mariadb
MARIADB_PORT=3306
MARIADB_DATABASE=infra
MARIADB_USER=infra
MARIADB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
MARIADB_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# LocalAI/OpenWebUI
LOCALAI_INTERNAL_URL=http://localai:8080
# IMPORTANT: Generate secret key using: openssl rand -base64 32
OPENWEBUI_SECRET_KEY=CHANGE_ME_STRONG_SECRET_KEY

# Generic
HOST_ROLE=vps
